@model EdamonAPIworkingEdition.Models.Rootobject


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.hits[0].recipe.label)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hits[0].recipe.totalWeight)
        </th>
        <th></th>
    </tr>
    @foreach(var item in Model.hits)
    {



        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.recipe.label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.recipe.totalWeight)
            </td>
            <td>
                @for (int i = 0; i < item.recipe.ingredients.Length; i++)
                {
                    @Html.DisplayFor(modelItem => item.recipe.ingredients[i].text)<br />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.recipe.ingredientLines)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.recipe.image)" />
            </td>


        </tr>

    }

</table>
          